generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model userlogin {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  role     ERole    @default(EMPLOYEE)
  empid    Int
  emp      employee @relation(fields: [empid], references: [id])
}

model employee {
  id              Int         @id @default(autoincrement())
  firstname       String
  lastname        String
  email           String      @unique
  mobile          String
  roledescription String
  valid           Boolean     @default(true)
  depid           Int
  dept            department  @relation(fields: [depid], references: [id])
  leavehistory    leave[]
  userlogin       userlogin[]
}

model department {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  manager  String
  visible  Boolean    @default(true)
  employee employee[]
}

model leave {
  id               Int       @id @default(autoincrement())
  employeeid       Int
  leavetype        LeaveType @default(OTHERS)
  startdate        DateTime
  enddate          DateTime
  leavedescription String
  valid            Boolean   @default(true)
  leavetimestamp   DateTime  @default(now())
  leavestatus      Status    @default(PENDING)
  statustimestamp  DateTime? @updatedAt
  totalleavesleft  Int       @default(20)
  employee         employee  @relation(fields: [employeeid], references: [id])
}

enum ERole {
  HR
  MANAGER
  EMPLOYEE
}

enum LeaveType {
  SICK
  PAID
  COMPLIMENTARY
  LOP
  EMERGENCY
  OTHERS
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}
