
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model userlogin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      EmployeeRole[]  
  employee  employee[] 
}

model employee {
  id              Int         @id @default(autoincrement())
  firstname       String
  lastname        String
  email           String      @unique  
  mobile          String
  roledescription String
  visible          Boolean     @default(true)
  departmentid    Int
  department      department  @relation(fields: [departmentid], references: [id])
  userid          Int
  userlogin       userlogin   @relation(fields: [userid], references: [id])
  leavehistory    leave[]
  
}

model department {
  id       Int        @id @default(autoincrement())
  name     String
  visible  Boolean    @default(true)
  employee employee[]
}

model leave {
  id               Int       @id @default(autoincrement())
  employeeid       Int
  leavetype        LeaveType @default(OTHERS)
  startdate        DateTime
  enddate          DateTime
  leavedescription String
  visible          Boolean   @default(true)
  leavecreatedtime DateTime  @default(now())
  leavestatus      Status    @default(PENDING)
  leaveupdatedtime  DateTime? @updatedAt
  totalleavesleft  Int       @default(20)
  employee         employee  @relation(fields: [employeeid], references: [id])
}

enum EmployeeRole {
  HR
  MANAGER
  EMPLOYEE
}

enum LeaveType {
  SICK
  PAID
  COMPOFF
  LOP
  EMERGENCY
  OTHERS
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}
